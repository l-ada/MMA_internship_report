% Time derivatives
\newcommand{\dt}[1]{\frac{d#1}{dt}}                    % d/dt
\newcommand{\ddt}[1]{\frac{d^2#1}{dt^2}}              % d²/dt²
\newcommand{\pdt}[1]{\frac{\partial #1}{\partial t}}   % ∂/∂t
\newcommand{\pddt}[1]{\frac{\partial^2 #1}{\partial t^2}} % ∂²/∂t²

% Partial derivatives
\newcommand{\pd}[2]{\frac{\partial #1}{\partial #2}}   % ∂f/∂x
\newcommand{\pdd}[2]{\frac{\partial^2 #1}{\partial #2^2}} % ∂²f/∂x²
\newcommand{\pdmixed}[3]{\frac{\partial^2 #1}{\partial #2 \partial #3}} % ∂²f/∂x∂y

% Vector calculus operators
\newcommand{\grad}{\nabla}                             % Gradient
\newcommand{\divergence}{\nabla \cdot}                 % Divergence
\newcommand{\curl}{\nabla \times}                      % Curl
\newcommand{\laplacian}{\nabla^2}                      % Laplacian

% Alternative notation
\newcommand{\gradof}[1]{\nabla #1}                     % ∇f
\newcommand{\divof}[1]{\nabla \cdot #1}               % ∇·F
\newcommand{\curlof}[1]{\nabla \times #1}             % ∇×F
\newcommand{\laplaceof}[1]{\nabla^2 #1}               % ∇²f

% Common vector notation
\newcommand{\vect}[1]{\bm{#1}}                         % Bold vectors
\newcommand{\uvect}[1]{\hat{\bm{#1}}}                 % Unit vectors

% Common mathematical sets
\newcommand{\R}{\mathbb{R}}                            % Real numbers
\newcommand{\C}{\mathbb{C}}                            % Complex numbers
\newcommand{\N}{\mathbb{N}}                            % Natural numbers
\newcommand{\Z}{\mathbb{Z}}                            % Integers

% Other useful commands
\newcommand{\abs}[1]{\left|#1\right|}                  % Absolute value
\newcommand{\norm}[1]{\left\|#1\right\|}              % Norm
\newcommand{\inner}[2]{\langle #1, #2 \rangle}        % Inner product


% Optimization operators
\DeclareMathOperator*{\argmin}{arg\,min}
\DeclareMathOperator*{\argmax}{arg\,max}
\DeclareMathOperator*{\minimize}{min}
\DeclareMathOperator*{\maximize}{max}


